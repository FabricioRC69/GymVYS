@model GymVidaYSaludWEB.Entities.DatosMedidas
@{
    ViewData["Title"] = "Actualizar Medida";
}

<!DOCTYPE html>

<html>

<body>
    <div class="container">

         <div class="row mt-3">
            <div class="col-xl-7 mx-auto">
                <div class="card border-top border-0 border-4 border-warning">
                    <div class="card-body p-5">
                        <div class="card-title d-flex align-items-center">
                            <div>
                                <i class=""></i>
                            </div>
                            <h5 class="mb-0 text-warning">Actualizar Medida</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("ActualizarMedida", "DatosMedidas", FormMethod.Post, htmlAttributes: new { @class = "row g-3" }))
                        {

                            <div class="col-md-6">

                                <label class="text-center form-label">Cédula de Cliente Disponible</label>

                                @Html.DropDownListFor(m => m.idCliente, ViewBag.Lista as List<SelectListItem>, new { @class="form-control", required="required"})

                            </div>

                   
                            <div class="col-md-6">
                                <label class="text-center form-label">Peso</label>
                                @Html.TextBox("Peso",Model.Peso.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>
                               <div class="col-md-6">
                                <label class="text-center form-label">Altura</label>
                                @Html.TextBox("Altura",Model.Altura.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>
                               <div class="col-md-6">
                                <label class="text-center form-label">Hombro</label>
                                @Html.TextBox("Hombro",Model.Hombro.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>
                               <div class="col-md-6">
                                <label class="text-center form-label">Pecho</label>
                                @Html.TextBox("Pecho",Model.Pecho.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>                
                            <div class="col-md-6">
                                <label class="text-center form-label">Cadera</label>
                                @Html.TextBox("Cadera",Model.Cadera.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>                
                            <div class="col-md-6">
                                <label class="text-center form-label">Abdomen</label>
                                @Html.TextBox("Abdomen",Model.Abdomen.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>                
                            <div class="col-md-6">
                                <label class="text-center form-label">Cintura</label>
                                @Html.TextBox("Cintura",Model.Cintura.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>               
                            <div class="col-md-6">
                                <label class="text-center form-label">Bicep Derecho</label>
                                @Html.TextBox("BicepD",Model.BicepD.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>                
                            <div class="col-md-6">
                                <label class="text-center form-label">Bicep Izquierdo</label>
                                @Html.TextBox("BicepI",Model.BicepI.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>                
                            <div class="col-md-6">
                                <label class="text-center form-label">Muslo Derecho</label>
                                @Html.TextBox("MusloD",Model.MusloD.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>                
                            <div class="col-md-6">
                                <label class="text-center form-label">Muslo Izquierdo</label>
                                @Html.TextBox("MusloI",Model.MusloI.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>                
                            <div class="col-md-6">
                                <label class="text-center form-label">Pantorrilla Derecha</label>
                                @Html.TextBox("PantorrillaD",Model.PantorrillaD.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>                
                            <div class="col-md-6">
                                <label class="text-center form-label">Pantorrilla Izquierda</label>
                                @Html.TextBox("PantorrillaI",Model.PantorrillaI.ToString(),
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>
                                 @Html.TextBoxFor(m=>m.idMedidas,
                            new
                            {
                            @class="form-control",
                            @type="input", hidden="true"
                            })

                            
                                <div class="mb-3">
                                    <button class="btn btn-warning" style="width: 100%">Actualizar Medida</button>
                                </div>
                        }

                         <div class="col">
                                <a class="btn text-white btn-lg btn-block mt-3 h6" style="background-color:#212529; width:100%; font-size:15px" asp-controller="DatosMedidas" asp-action="ConsultarMedidas">Volver</a>
                            </div>
                    </div>
                </div>
            </div>
          </div>
          </div>


            <div class="col"></div>
 

</body>

</html>