<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymVidaYSaludWEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymVidaYSaludWEB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container px-5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gym Vida Y Salud</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                        @if(ViewBag.Rol != "1" && ViewBag.Rol != "2")
                        {
                            <li class="nav-item">
                            <a class="nav-link text-gray" asp-area="" asp-controller="Home" asp-action="Index">Iniciar Sesión</a>
                            </li>
                        } else
                        {
                            <li class="nav-item">
                            <a class="nav-link text-gray" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-gray" asp-area="" asp-controller="Home" asp-action="AcercaNosotros">Acerca de Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-gray" asp-area="" asp-controller="Home" asp-action="Membresias">Membresías</a>
                        </li>

                        @if(ViewBag.Rol == "1" || ViewBag.Rol == "2")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownBlog" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Tablas de datos</a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownBlog">

                                    <li class="nav-item">
                                        <a class="nav-link text-black dropdown-item text-center" style="font-weight:600" asp-area="" asp-controller="DatosClientes" asp-action="ConsultarTodosClientes">Ver Clientes</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-black dropdown-item text-center" style="font-weight:600" asp-area="" asp-controller="DatosMedidas" asp-action="ConsultarMedidas">Ver Medidas</a>
                                    </li>
                                    @if (ViewBag.Rol == "1")
                                    {

                                        <li class="nav-item">
                                            <a class="nav-link text-black dropdown-item text-center" style="font-weight:600" asp-area="" asp-controller="Usuario" asp-action="ConsultarUsuarios">Ver Usuarios GYM</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownPortfolio" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">@ViewBag.Usuario</a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownPortfolio">

                                    <li class="nav-item">
                                        <a class="nav-link text-black dropdown-item text-center" style="font-weight:600" asp-area="" asp-controller="Usuario" asp-action="ConsultarPerfil">Perfil</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-black dropdown-item text-center" style="font-weight:600" asp-area="" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar Sesion</a>
                                    </li>
                                </ul>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>

        <!-- Header-->
        @*        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">

            </ul>
            </div>
            </div>
            </nav>*@
    </header>
    <div class="mb-5">
        <main role="main" class="pb-3 mb-5">
            @RenderBody()
        </main>
    </div>



    <footer class="bg-dark border-top footer text-muted mt-5" style="position: fixed; bottom: 0;clear:both;width:100%;">
        <div class="container">
            <div class="col-auto"><div class="small m-0 text-white text-center">Todos los derechos reservados &copy; Gym Vida Y Salud 2022</div></div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
