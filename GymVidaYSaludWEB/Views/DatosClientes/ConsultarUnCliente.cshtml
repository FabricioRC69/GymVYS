@model GymVidaYSaludWEB.Entities.DatosCliente

@{
    ViewData["Title"] = "Consultar Cliente";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Datos del Cliente</title>
</head>
<body>

<div>
    <h4>Datos del Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Cédula
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class = "col-sm-2">
            Nombre Completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
            Día de pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dia_de_Pago_Cada_Mes)
        </dd>
        <dt class = "col-sm-2">
            Numero Telefónico
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumContacto)
        </dd>
        <dt class = "col-sm-2">
            Correo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "ActualizarCliente", new { Model.idCliente }) |
    
    <a  asp-controller="DatosClientes" asp-action="ConsultarTodosClientes">Ir a la lista</a>
</div>
</body>
</html>
