@model GymVidaYSaludWEB.Entities.DatosCliente
@{
    ViewData["Title"] = "Registrar Cliente";
}

<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymVidaYSaludWEB.styles.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width" />
    <title>Registrar Cliente</title>
</head>

<body>
    <div class="container">

        <div class="row">

            <div class="col"></div>
            <div class="col">
                <div class="card mt-5 cardLogin">
                    <div class="card-header text-center">
                        Registrar Cliente
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("RegistrarCliente", "DatosClientes"))
                        {

                            <div class="mb-3">
                                <label class="text-center">Cedula</label>
                                @Html.TextBox("Cedula","",
                            new
                            {
                            @class="form-control",
                            @type="input",
                            })
                            </div>
                            <div class="mb-3">
                                <label class="text-center">Nombre Completo</label>
                                @Html.TextBox("NombreCompleto","",
                            new
                            {
                            @class="form-control",
                            @type="input",
                            })
                            </div>
                               <div class="mb-3">
                                <label class="text-center">Numero de contacto</label>
                                @Html.TextBox("NumContacto","",
                            new
                            {
                            @class="form-control",
                            @type="input",
                            })
                            </div>
                               <div class="mb-3">
                                <label class="text-center">Correo</label>
                                @Html.TextBox("Correo","",
                            new
                            {
                            @class="form-control",
                            @type="input",
                            })
                            </div>

                                <div class="col">
                                    <button class="btn btn-success h6" style="width:100%; font-size:15px">Registrar Cliente</button>
                                </div>

                        }
                        <div class="col">
                                <a class="btn text-white btn-lg btn-block mt-3 h6" style="background-color:#212529; width:100%; font-size:15px" asp-controller="DatosClientes" asp-action="ConsultarTodosClientes">Volver</a>
                            </div>
                          
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
</body>

</html>