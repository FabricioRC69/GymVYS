@model GymVidaYSaludWEB.Entities.UsuariosObj
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymVidaYSaludWEB.styles.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width" />
    <title>Registrar Usuario</title>


</head>
<body>
     <div class="container">

        <div class="row">

            <div class="col"></div>
            <div class="col">
                <div class="card mt-5 cardLogin">
                    <div class="card-header text-center">
                        Registrar Usuario
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("RegistraUsuario", "Usuario"))
                        {

                            <div class="mb-3">
                                <label class="text-center">Correo</label>
                                @Html.TextBox("Correo","",
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>
                            <div class="mb-3">
                                <label class="text-center">Contraseña</label>
                                @Html.TextBox("Contraseña","",
                            new
                            {
                            @class="form-control",
                            required="required",
                            @type="input",
                            })
                            </div>
                            <div class="mb-3">
                                <label class="text-center">Rol</label>
                                @Html.DropDownList("Rol",
                                 new List<SelectListItem>{
                                     new SelectListItem{ Text ="Mayor", Value ="1"},
                                     new SelectListItem{ Text ="Menor", Value ="2"}
                                 },
                            new
                            {
                            @class="form-control",
                            @type="input",
                            })
                            </div>
                            <div class="row">
                                <div class="col">
                                    <button class="btn btn-color">Registrarse</button>
                                </div>
                                <div class="col">
                                    <a asp-controller="Usuario" asp-action="LogIn">¿Ya tiene una cuenta?</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
</body>
</html>
